{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "preserve",
    "rootDir": "src",
    "composite": true,
    "outDir": "./lib",
    "lib": ["esnext", "DOM"],
    "module": "esnext",
    "sourceMap": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noStrictGenericChecks": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "esnext"
  },
  "references": [
    {
      "path": "../common"
    }
  ]
}
